{
  "name": "@someone-comes-home/pir-detector",
  "version": "1.0.0",
  "exports": "./src/app.ts",
  "tasks": {
    "test": "deno test --coverage --allow-env --allow-net",
    "build": "deno compile --output ./bin/someone-comes-home ./src/app.ts",
    "dev": "deno run --watch ./src/app.ts",
    "start": "deno run ./src/app.ts"
  },
  "imports": {
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "twilio": "npm:twilio@^5.8.2"
  },
  "compilerOptions": {
    "strict": true
  },
  "permissions": {
    "read": true,
    "write": true,
    "net": true,
    "env": true,
    "ffi": true
  },
  "lock": "./deno.lock"
}